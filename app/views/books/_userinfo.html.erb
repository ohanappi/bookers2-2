            <!--ここから-->
            
            <div class="col-md-3">
                <h2>User info</h2>
                
                <table class="table">
                    <tbody>
                        
                        <tr>
                            <%= image_tag users.get_profile_image(100,100) %>
                        </tr>
                        
                        <tr>
                            <th>name</th>
                            <th><%= users.name %></th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th><%= users.introduction %></th>
                        </tr>
                        
                    </tbody>
                </table>
                <div class="row">
                    <%= link_to edit_user_path(@users), class:"btn btn-outline-secondary btn-block" do%>
                        <i class="fas fa-user-cog"></i>
                       
                    <% end %>
                    
                </div>
                
                <h3>New book</h3>
                
                <!-- form_with部分 -->
                <%= form_with model: book do |f| %>
                  <p>Title</p>
                  <%= f.text_field :title  %>
                	
                  <p>Opinion</p>
                  <%= f.text_area :body %>
                    <br>
                  <%= f.submit 'Create Book' %>
                <% end %>
            </div>
            <!--ここまで-->
